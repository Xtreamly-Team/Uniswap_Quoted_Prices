{
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
